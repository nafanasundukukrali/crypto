{
  "compilerOptions": {
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@*": ["src/*"],
      "components/*": ["./src/components/"],
      "config/*": ["./src/config/"],
      "styles/*": ["./src/styles/"],
      "utils/*": ["./src/utils/"],
      "pages/*": ["./src/pages/"],
      "fonts/*": ["./src/fonts/"],
      "store/*": ["./src/store/"]
    },
//    "forceConsistentCasingInFileNames": true,
//    "noFallthroughCasesInSwitch": true,
//    "resolveJsonModule": true,
//    "isolatedModules": true,
//    "noEmit": true
  },
  "include": [
    "src",
    "./declaration.d.ts"
  ],
  "exclude": ["node_modules"]
}